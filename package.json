{
  "name": "glorious-barrels",
  "version": "1.0.0",
  "description": "React Single-Page for test environment",
  "main": "index.js",
  "scripts": {
    "build": "webpack -d",
    "serve": "node server/index.js",
    "start": "npm run build && npm run serve",
    "build-dev": "webpack -d --watch",
    "serve-dev": "nodemon server/index.js",
    "start-dev": "npm run build-dev & npm run serve-dev",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gwlinc/glorious-barrels.git"
  },
  "keywords": [
    "react"
  ],
  "author": "Ian McKinney and Cameron Streeter",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/i-mckinney/glorious-barrels/issues"
  },
  "homepage": "https://github.com/i-mckinney/glorious-barrels#readme",
  "dependencies": {
    "dotenv": "^6.0.0",
    "express": "^4.16.3",
    "normalize.css": "^8.0.0",
    "prop-types": "^15.6.2",
    "react": "^16.5.2",
    "react-dom": "^16.5.2",
    "react-slick": "^0.23.1"
  },
  "babel": {
    "presets": [
      "@babel/env",
      "@babel/react"
    ],
    "plugins": [
      "@babel/proposal-class-properties"
    ]
  },
  "eslintConfig": {
    "extends": "airbnb",
    "parser": "babel-eslint",
    "env": {
      "browser": true,
      "node": true
    }
  },
  "jest": {
    "setupFiles": [
      "./client/spec/setupTestFiles.js"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.1.0",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-react": "^7.0.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.0",
    "babel-jest": "^23.6.0",
    "babel-loader": "^8.0.2",
    "enzyme": "^3.6.0",
    "enzyme-adapter-react-16": "^1.5.0",
    "eslint": "^5.6.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-loader": "^2.1.1",
    "eslint-plugin-ejs": "0.0.2",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-react": "^7.11.1",
    "jest": "^23.6.0",
    "jest-enzyme": "^6.1.2",
    "webpack": "^4.20.2",
    "webpack-cli": "^3.1.1"
  }
}
